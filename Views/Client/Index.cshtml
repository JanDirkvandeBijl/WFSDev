@model IEnumerable<Client>

<h2>Clients</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Email</td>
                <td>@client.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group mt-4">
    <a asp-action="Details" asp-route-id="0" class="btn btn-success">Create New Client</a>
</div>
