@model IEnumerable<IGrouping<string, WFSDev.Models.LocalizedResource>>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by Key or Translation" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<a asp-action="Details" class="btn btn-success w-100">Add New</a>

<table class="table">
    <thead>
        <tr>
            <th>Key</th>
            <th>Culture</th>
            <th>Translation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr class="row-@group.Key">
                <td colspan="4">
                    <strong>@group.Key</strong>
                </td>
                <td></td>
                <td></td>
                <td>
                    <a asp-action="Details" asp-route-key="@group.Key" class="btn btn-info">Details</a>
                    <button class="btn btn-danger" onclick="deleteResource('@group.Key')">Delete</button>
                </td> 

            </tr>
            @foreach (var item in group)
            {
                <tr class="row-@item.Key">
                    <td></td>
                    <td>@item.Culture.Name</td>
                    <td>@item.Translation</td>
                    <td></td>
                </tr>
            }
        }
    </tbody>
</table>


<script type="text/javascript">
    function deleteResource(key) {
        console.log("Deleting resources with key:", key); // Debugging line
        if (confirm('Are you sure you want to delete this resources?')) {
            var xhr = new XMLHttpRequest();
            xhr.open("POST", '@Url.Action("Delete", "Resource")', true);
            xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    var result = JSON.parse(xhr.responseText);
                    if (result.success) {
                        var rows = document.querySelectorAll('.row-' + key);
                        rows.forEach(function (row) {
                            row.parentNode.removeChild(row);
                        });
                    } else {
                        alert('Error deleting resource');
                    }
                }
            };
            xhr.send(JSON.stringify(key)); 
        }
    }

</script>
