@model WFSDev.Models.LocalizedResourceDetails

<h2>@(string.IsNullOrEmpty(Model.Key) ? "Create Localized Resource" : "Edit Localized Resource")</h2>

<form asp-action="Details" method="post">
    <div class="form-group mb-3">
        <label asp-for="Key" class="control-label"></label>
        <input asp-for="Key" class="form-control" />
    </div>

    @if (ViewBag.Cultures is List<Culture> cultures)
    {
        for (int i = 0; i < cultures.Count; i++)
        {
            var culture = cultures[i];
            var translation = Model.Translations?.FirstOrDefault(t => t.CultureId == culture.Id);

            <div class="form-group mb-3">
                <label class="control-label">@culture.Name</label>
                <input type="hidden" name="Translations[@i].CultureId" value="@culture?.Id" />
                <input type="hidden" name="Translations[@i].Id" value="@translation?.Id" />
                <input type="text" name="Translations[@i].Value"
                       class="form-control"
                       placeholder="Translation"
                       value="@translation?.Value" />
            </div>
        }
    }

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary me-2">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
