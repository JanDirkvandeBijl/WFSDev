@model ConnectionString

<h2>@(Model.Id == 0 ? "Create Connection String" : "Edit Connection String")</h2>

<form asp-action="ConnectionStringDetails" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ClientId" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ServerName" class="control-label"></label>
        <input asp-for="ServerName" class="form-control" />
        <span asp-validation-for="ServerName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DatabaseName" class="control-label"></label>
        <input asp-for="DatabaseName" class="form-control" />
        <span asp-validation-for="DatabaseName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DatabaseUserId" class="control-label"></label>
        <input asp-for="DatabaseUserId" class="form-control" />
        <span asp-validation-for="DatabaseUserId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DatabasePassword" class="control-label"></label>
        <input asp-for="DatabasePassword" class="form-control" />
        <span asp-validation-for="DatabasePassword" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AdditionalParameters" class="control-label"></label>
        <input asp-for="AdditionalParameters" class="form-control" />
        <span asp-validation-for="AdditionalParameters" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary me-2">Save</button>
        <a asp-action="Details" asp-route-id="@Model.ClientId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
